<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_theme">

    <TextView
        android:id="@+id/tv_servicename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通洗车"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/tv_price"
        android:background="@color/white"
        android:padding="10dp"
        />

    <TextView
        android:id="@+id/tv_yuyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_servicename"
        android:padding="10dp"
        android:textColor="@color/red_f76139"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$25"
        android:background="@color/white"
        android:layout_toLeftOf="@id/tv_yuyue"
        android:layout_marginRight="2dp"
        android:textColor="@color/red_f76139"
        android:padding="10dp"
        android:layout_alignBottom="@id/tv_servicename"
        />
    
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:background="@color/white"
        android:layout_below="@id/tv_servicename"
        android:text="整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫整车泡沫"
        />

</RelativeLayout>
