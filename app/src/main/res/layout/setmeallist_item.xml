<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.clown.wyxc"
    style="@style/match_wrap"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/gray_theme">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_goods" />

        <TextView
            android:id="@+id/goods_name"
            style="@style/black_28.18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/goods_image"
            android:text="商品名称" />

        <com.clown.wyxc.components.TitleTextview
            android:id="@+id/goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/goods_name"
            android:layout_below="@id/goods_name"
            android:layout_toRightOf="@id/goods_image"
            custom:tt_text_backcolor="@color/gray_a5"
            custom:tt_text_backsize="18sp"
            custom:tt_text_front="价格："
            custom:tt_text_frontcolor="@color/gray_a5"
            custom:tt_text_frontsize="18sp" />

        <TextView
            android:id="@+id/tv_attr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击设置属性"
            android:textColor="@color/red"
            android:layout_below="@+id/goods_price"
            android:layout_alignLeft="@id/goods_name"
            android:layout_toRightOf="@+id/goods_image"
             />

    </RelativeLayout>

</android.support.v7.widget.CardView>