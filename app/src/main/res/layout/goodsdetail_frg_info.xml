<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/convenientBanner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:canLoop="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_theme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/goods_share"
            style="@style/gray03.12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:src="@drawable/icon_cellphone_blue" />

        <TextView
            android:id="@+id/goods_name"
            style="@style/gray03.18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/goods_share"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/goods_share"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="江苏弘丰汽车服务有限公司" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/goods_name"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_leixing"
            style="@style/white.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/goods_name"
            android:layout_below="@id/line1"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_corner_blue"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="修理厂" />

        <TextView
            android:id="@+id/tv_pinfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_leixing"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_leixing"
            android:text="5.0分" />

        <TextView
            android:id="@+id/tv_turnOver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_leixing"
            android:layout_alignParentRight="true"
            android:text="成交0笔" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_leixing"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line2"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/icon_location_gray"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="开发区东方汽车城吉庆路3号" />

        <ImageView
            android:id="@+id/iv_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/line2"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/icon_start_gray" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_shoucang"
            android:layout_below="@id/line2"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/iv_shoucang"
            android:background="@color/gray" />
    </RelativeLayout>
</LinearLayout>
