<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">


    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:layout_gravity="center"
        android:text="00:00"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg9_buyer"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="25dp"
        android:paddingLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/tv_title"
            android:textSize="18sp"
            android:text="卖家同意申请"/>


        <TextView

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_detail"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="123456"
            android:layout_below="@id/tv_title"
            />


        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:id="@+id/rl_watchdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textSize="16sp"
                android:id="@+id/tv_seedetail"/>

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/infomationright"
                android:layout_toRightOf="@id/tv_seedetail"
                android:layout_centerVertical="true"/>
            </RelativeLayout>

        <View
            android:layout_marginBottom="5dp"
            android:layout_above="@id/rl_watchdetail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_theme"/>


    </RelativeLayout>
</LinearLayout>