<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.clown.wyxc.components.ImageViewEqualScaling
        android:id="@+id/activity_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/test_img_default" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/activity_img"
        android:background="@color/gray_theme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/line"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/activitytime_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="活动时间：2017.04.01-2017.05.01" />

        <TextView
            android:id="@+id/activitycontent_tv"
            style="@style/greenff7a00.16"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:text="查看详情" />
    </RelativeLayout>


</RelativeLayout>
