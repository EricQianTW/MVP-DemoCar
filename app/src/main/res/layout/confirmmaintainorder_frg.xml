<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            style="@style/gray03.18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="合计：0.00" />

        <TextView
            style="@style/white.18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/orange_ff"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="去结算" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_name"
                android:inputType="phone"
                android:maxLength="11"
                android:text="19239339999" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_address"
                style="@style/gray33.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送方式：" />

            <TextView
                style="@style/gray_9f.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/tv_address"
                android:layout_below="@id/tv_address"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:inputType="phone"
                android:maxLength="11"
                android:text="地址地址地址地址地址地址地址" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/arrow_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_goodspic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/goods_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:inputType="phone"
                android:maxLength="11"
                android:text="2件商品 2项服务" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_goodpricetitle"
                style="@style/gray33.18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品金额" />

            <TextView
                android:id="@+id/tv_goodprice"
                style="@style/red.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_goodpricetitle"
                android:layout_alignParentRight="true"
                android:inputType="phone"
                android:maxLength="11"
                android:text="￥0.00" />

            <TextView
                android:id="@+id/tv_servicetitle"
                style="@style/gray33.18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_goodpricetitle"
                android:text="服务费" />

            <TextView
                android:id="@+id/tv_service"
                style="@style/red.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_servicetitle"
                android:layout_alignParentRight="true"
                android:inputType="phone"
                android:maxLength="11"
                android:text="￥0.00" />

            <TextView
                android:id="@+id/tv_postagetitle"
                style="@style/gray33.18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_servicetitle"
                android:text="运费" />

            <TextView
                android:id="@+id/tv_postage"
                style="@style/red.20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_postagetitle"
                android:layout_alignParentRight="true"
                android:inputType="phone"
                android:maxLength="11"
                android:text="￥0.00" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>