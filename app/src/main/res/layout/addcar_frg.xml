<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_addcar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_88"
        android:gravity="center"
        android:padding="10dp"
        android:text="添加车辆"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_addcar"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_brand"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="品牌"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:drawableEnd="@drawable/icon_arrow"
                android:hint="请选择品牌"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_chepai"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="车牌"
                android:textSize="14sp" />

            <com.clown.baselibray.material.widget.Spinner
                android:id="@+id/tv_sub_chepai"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:background="@color/white"
                android:gravity="left"
                android:minWidth="30dp"
                android:padding="0dp"
                app:spn_label=""
                app:v_styleId="@array/spinner" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:paddingRight="5dp"
                android:src="@drawable/icon_xialakuang" />

            <EditText
                android:id="@+id/tv_sub_chepai2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:background="@color/white"
                android:gravity="center"
                android:minWidth="30dp"
                android:inputType="text"
                android:padding="0dp"
                android:maxLength="1"
                android:hint="A"
                android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                />

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/white"-->
                <!--android:paddingRight="5dp"-->
                <!--android:src="@drawable/icon_xialakuang" />            -->

            <!--<com.clown.baselibray.material.widget.Spinner-->
                <!--android:id="@+id/tv_sub_chepai2"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_marginStart="1dp"-->
                <!--android:background="@color/white"-->
                <!--android:gravity="left"-->
                <!--android:minWidth="30dp"-->
                <!--android:padding="0dp"-->
                <!--app:spn_label=""-->
                <!--app:v_styleId="@array/spinner" />-->

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="@color/white"-->
                <!--android:paddingRight="5dp"-->
                <!--android:src="@drawable/icon_xialakuang" />-->

            <EditText
                android:id="@+id/tv_chepai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:hint="88888"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="精准保养专用" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tv_title_xingshilicheng"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="行驶里程"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_gongli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="公里"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_xingshilicheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toLeftOf="@id/tv_gongli"
                android:layout_toRightOf="@id/tv_title_xingshilicheng"
                android:background="@color/white"
                android:hint="请输入里程数"
                android:maxLength="6"
                android:inputType="numberSigned"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textSize="14sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/tv_title_shangluriqi"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="上路日期"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_shangluriqi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:drawableEnd="@drawable/icon_arrow"
                android:hint="请选择上路日期"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="选填" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/tv_title_xinghao"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="型号"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_xinghao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:drawableEnd="@drawable/icon_xialakuang"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:lines="1"
                android:text="请选择汽车型号"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp">

            <TextView
                android:id="@+id/tv_title_fadongjihao"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="10dp"
                android:paddingEnd="30dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="发动机号"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/tv_fadongjihao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                android:hint="请输入发动机号后6位"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:maxLength="6"
                android:paddingTop="10dp"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:visibility="gone"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            style="@style/greenff7a00.16"
            android:text="设为默认爱车"
            />
    </LinearLayout>

</RelativeLayout>